<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="paymentPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/PaymentDS</jta-data-source>
        
        <!-- エンティティクラス -->
        <class>com.skiresort.payment.model.Payment</class>
        <class>com.skiresort.payment.model.Refund</class>
        <class>com.skiresort.payment.model.PaymentEvent</class>
        
        <properties>
            <!-- Hibernateの設定 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- JPA設定 -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            
            <!-- パフォーマンス設定 -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            
            <!-- セキュリティ設定（PCI DSS準拠） -->
            <property name="hibernate.connection.isolation" value="2"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
