# フロントエンド環境変数設定例
# このファイルを .env.local にコピーして使用してください

# API Base URL（本番環境では実際のAPIゲートウェイURLを設定）
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Product Catalog Service URL
NEXT_PUBLIC_PRODUCT_CATALOG_URL=http://localhost:8082

# Shopping Cart Service URL
NEXT_PUBLIC_SHOPPING_CART_URL=http://localhost:8087

# AI Support Service URL
NEXT_PUBLIC_AI_SUPPORT_URL=http://localhost:8091

# API Gateway経由でアクセスするかどうか（本番環境では true 推奨）
NEXT_PUBLIC_USE_API_GATEWAY=true

# ダミーユーザ機能の制御（本番環境では必ず true に設定）
NEXT_PUBLIC_DISABLE_DUMMY_USER=true

# 開発環境でのみ false に設定
# NEXT_PUBLIC_DISABLE_DUMMY_USER=false
